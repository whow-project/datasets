@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#>.
@prefix fnml: <http://semweb.mmlab.be/ns/fnml#> .
@prefix grel: <http://users.ugent.be/~bjdmeest/function/grel.ttl#> .
@prefix fno: <https://w3id.org/function/ontology#> .
@prefix idlab-fn: <http://example.com/idlab/function/> .
@prefix sd: <http://www.w3.org/ns/sparql-service-description#> .
@prefix crml: <http://w3id.org/stlab/crml#> .
@prefix hydro: <https://w3id.org/whow/onto/hydrography/>.
@base <https://w3id.org/whow/onto/hydrography/> .

# #LogicalSourceLaghi
<#LogicalSourceLaghi> a rml:BaseSource ;
    rml:source [
      a csvw:Table;
      csvw:url "023-ACQUE-SUPERFICIALI-DATI-Laghi.csv";

      csvw:dialect [
        a csvw:Dialect;
        csvw:delimiter ","
      ]
    ];
    rml:referenceFormulation ql:CSV .


    # #LogicalSourceFiumi
    <#LogicalSourceFiumi> a rml:BaseSource ;
        rml:source [
          a csvw:Table;
          csvw:url "023_ACQUE_SUPERFICIALI_DATI_Fiumi_1_.csv";

          csvw:dialect [
            a csvw:Dialect;
            csvw:delimiter ","
          ]
        ];
        rml:referenceFormulation ql:CSV .

        # #LogicalSourceAcqueSotterranee (PFAS)
        <#LogicalSourceAcqueSotterraneePFAS> a rml:BaseSource ;
            rml:source [
              a csvw:Table;
              csvw:url "Allegato_2_DATI_PFAS_2018_ACQUE_SOT_4_.csv";

              csvw:dialect [
                a csvw:Dialect;
                csvw:delimiter ","
              ]
            ];
            rml:referenceFormulation ql:CSV .


    ###########################################################
    ##                  MAPPING RULES
    ##########################################################


    # #################################
    # ## LAKE WATER BODY  MAPPING:
    # #################################
    <#LakeWaterBodyMapping> a rr:TriplesMap ;
    rml:logicalSource <#LogicalSourceLaghi> ;
    rr:subjectMap [
      rr:template "https://w3id.org/whow/onto/hydrography/lakewaterbody/{CORPO IDRICO}";
      rr:termType rr:IRI;
      rr:class hydro:LakeWaterBody
    ] ;
    rr:predicateObjectMap [
      rr:predicate rdfs:label ;
      rr:objectMap [ rr:template "Waterbody {CORPO IDRICO}: Lake {LAGO}." ; rr:language "en" ]
    ];
    rr:predicateObjectMap [
      rr:predicate hydro:belongsToWaterBasin ;
      rr:objectMap [ rr:template "https://w3id.org/whow/onto/hydrography/waterbasin/{BACINO IDROGRAFICO}" ];
    ].

    # #################################
    # ## RIVER WATER BODY  MAPPING:
    # #################################
    <#RiverWaterBodyMapping> a rr:TriplesMap ;
    rml:logicalSource <#LogicalSourceFiumi> ;
    rr:subjectMap [
      rr:template "https://w3id.org/whow/onto/hydrography/riverwaterbody/{CORPO IDRICO}";
      rr:termType rr:IRI;
      rr:class hydro:RiverWaterBody
    ] ;
    rr:predicateObjectMap [
      rr:predicate rdfs:label;
      rr:objectMap [ rr:template "Waterbody {CORPO IDRICO}: River {CORSO D'ACQUA}." ; rr:language "en" ]
    ];
    rr:predicateObjectMap [
      rr:predicate hydro:belongsToWaterBasin;
      rr:objectMap [ rr:template "https://w3id.org/whow/onto/hydrography/waterbasin/{BACINO IDROGRAFICO}" ]
    ].

    <#WaterBasinMapping> a rr:TriplesMap ;
    rr:subjectMap [
      rr:template "https://w3id.org/whow/onto/hydrography/waterbasin/{BACINO IDROGRAFICO}";
      rr:termType rr:IRI;
      rr:class hydro:WaterBasin
    ] ;
    rr:predicateObjectMap [
      rr:predicate rdfs:label;
      rr:objectMap [ rr:template "Waterbasin {BACINO IDROGRAFICO}." ; rr:language "en" ]
    ].

    # #################################
    # ## GROUNDWATER MAPPING:
    # #################################

    <#GroundWaterBodyMapping> a rr:TriplesMap ;
    rml:logicalSource <#LogicalSourceAcqueSotterraneePFAS> ;
    rr:subjectMap [
    fnml:functionValue [
      #rml:logicalSource <#LogicalSourceAcqueSotterraneePFAS>;
     rr:predicateObjectMap [
       rr:predicate fno:executes ;
       rr:objectMap [ rr:constant grel:array_join ]
     ];

      rr:predicateObjectMap [
        rr:predicate grel:p_array_a ;
        rr:objectMap [ rr:constant "https://w3id.org/whow/onto/hydrography/groundwaterbody/IT03"]
      ] ;
      rr:predicateObjectMap [
            rr:predicate grel:p_array_a ;
            rr:objectMap
                    <#DeleteWhitespacesGroundWaterBodyFunction>
      ];
    ];
    rr:class hydro:GroundWaterBody;
    rr:termType rr:IRI ] ;

    rr:predicateObjectMap [
      rr:predicate rdfs:label;
      rr:objectMap [ rr:template "Ground waterbody IT03{GWB}." ; rr:language "en" ] #sistemare spazi codice
    ].

    # #################################
    # ## FUNCTIONS:
    # #################################


    #<#CreateGroundWaterBodyURI-Function>


<#DeleteWhitespacesGroundWaterBodyFunction>
fnml:functionValue [
  rr:predicateObjectMap [
    rr:predicate fno:executes ;
    rr:objectMap [ rr:constant grel:string_replaceChars ]
 ];

 rr:predicateObjectMap [
     rr:predicate grel:valueParameter ;
     rr:objectMap [ rml:reference "GWB"]
     ];
  rr:predicateObjectMap [
    rr:predicate grel:p_string_find ;
    rr:objectMap [ rr:constant " " ]
  ];
  rr:predicateObjectMap [
    rr:predicate grel:p_string_replace ;
    rr:objectMap [ rr:constant "PLACEHOLDERFORWHITESPACE" ] #problema whitespace
];
 ].
